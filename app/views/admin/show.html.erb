<h1><%= @business.name %></h1>
<strong>Description: </strong>
<%= @business.description %>
<br/>
<strong>Site web: </strong>
<%= @business.site_web %>
<br/>
<ul>
  <% @business.menus.each do |menu| %>
    <li>
      <%= menu.title %>
      <ul>
        <% menu.menus.each do |sub_menu| %>
          <li>
            <%= sub_menu.title %>
            <ul>
              <% sub_menu.items.each do |i| %>
                <li>
                  <%= i.name %>
                </li> 
              <% end %>
            </ul>
          </li> 
        <% end %>
      </ul>  
    </li>       
  <% end %>  
</ul>
